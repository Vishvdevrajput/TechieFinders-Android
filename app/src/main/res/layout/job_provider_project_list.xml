<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

        <LinearLayout
                android:id="@+id/job_description_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView android:layout_width="0dp"
                          android:id="@+id/job_name"
                          android:layout_weight="1"
                          android:textColor="#000000"
                          android:text="JOB NAME"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 required"
                />

            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/job_description"
                      android:textColor="#595958"
                      android:layout_marginTop="16dp"
                      android:layout_marginBottom="16dp"
                      android:text="A job description or JD is a written narrative that describes the general tasks, or other related duties, and responsibilities of a position. It may specify the functionary to whom the position reports "
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView android:layout_width="0dp"
                          android:id="@+id/job_applied_text"
                          android:layout_weight="1"
                          android:textColor="#000000"
                          android:text="3 Applied"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/job_applied"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView android:layout_width="0dp"
                          android:id="@+id/jobs_suggested_data"
                          android:layout_weight="1"
                          android:textColor="#000000"
                          android:text="3 Applied"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/job_suggested_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>