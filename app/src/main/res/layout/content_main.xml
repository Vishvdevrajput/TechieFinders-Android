<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".landingActivity.ui.activity.MainActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_height="wrap_content">

        <Button
                android:id="@+id/submit_discharge_data"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#2372D9"
                android:text="POST JOB"
                android:layout_margin="16dp"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/jobs_posted"
            android:visibility="gone"
            android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:id="@+id/no_projects"
            android:textAlignment="center"
            android:text="No projects are available"/>


</LinearLayout>