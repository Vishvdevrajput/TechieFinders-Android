<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".landingActivity.ui.activity.MainActivity">

   <!--<android.support.v7.widget.RecyclerView-->
           <!--android:id="@+id/job_description_recyclerview"-->
           <!--android:layout_width="match_parent"-->
           <!--android:layout_height="wrap_content">-->

   <!--</android.support.v7.widget.RecyclerView>-->

   <LinearLayout android:layout_width="match_parent"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:layout_height="wrap_content">


      <Button
              android:id="@+id/submit_discharge_data"
              android:layout_width="200dp"
              android:layout_height="40dp"
              android:background="#2372D9"
              android:text="POST JOB"
              android:layout_margin="16dp"
              android:textSize="18sp"
              android:textColor="#FFFFFF"/>




   </LinearLayout>

   <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="16dp">


      <LinearLayout
              android:id="@+id/job_description_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="16dp"
              android:layout_gravity="center"
              android:layout_height="wrap_content">


         <TextView android:layout_width="match_parent"
                   android:id="@+id/job_name"
                   android:textColor="#000000"
                   android:text="JOB NAME"
                   android:textSize="16sp"
                   android:layout_height="wrap_content"/>

         <TextView android:layout_width="match_parent"
                   android:id="@+id/job_description"
                   android:textColor="#595958"
                   android:text="A job description or JD is a written narrative that describes the general tasks, or other related duties, and responsibilities of a position. It may specify the functionary to whom the position reports "
                   android:textSize="14sp"
                   android:layout_height="wrap_content"/>


         <LinearLayout android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:id="@+id/collaborate_layout"
                       android:paddingLeft="16dp"
                       android:paddingRight="16dp"
                       android:layout_height="wrap_content">


            <Button
                    android:id="@+id/number_count"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="#006400"
                    android:text="4"

                    android:layout_margin="16dp"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"/>

            <Button
                    android:id="@+id/collaborate"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#2372D9"
                    android:gravity="center"
                    android:text="COLLABORATE"
                    android:layout_margin="16dp"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"/>
         </LinearLayout>

         <android.support.v7.widget.RecyclerView
                 android:id="@+id/job_description_recyclerview"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

         </android.support.v7.widget.RecyclerView>

      </LinearLayout>

   </android.support.v7.widget.CardView>



</LinearLayout>